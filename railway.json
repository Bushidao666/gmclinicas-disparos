{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci --prefix web && npm run build --prefix web",
    "watchPatterns": ["web/**"],
    "nixpacksPlan": {
      "providers": ["node"]
    }
  },
  "deploy": {
    "startCommand": "npm run start --prefix web -- -p $PORT -H 0.0.0.0",
    "healthcheckPath": "/"
  }
}
